color1_gold = #FCFCFC
color2_gold = #FFD166
color3_gold = #EF476F
color4_gold = #612318
color5_gold = #e3c814 - 50
color6_gold = #abc
color7_gold = red + 130

.gold
  background color4_gold url('./assets/gold.jpg') no-repeat fixed bottom center
  background-size cover
  .header
    &.active
      box-shadow 0 4px 20px rgba(#000, .4), 0 3px 0 color4_gold + 10, 0 6px 30px rgba(color4_gold,.3), inset 0 2px rgba(#fff,.3), inset 0 -2px 13px rgba(color4_gold,.3)
      background color4_gold
  .logo
    color color1 + 10
    text-shadow 0 5px color4_gold,
                0 -2px color4_gold,
                2px 0 color4_gold,
                -2px 0 color4_gold,
                2px 4px color4_gold,
                -2px 4px color4_gold,
                0 3px 20px color4_gold,
                0 6px 60px color5_gold
    &:hover
      color color2
      text-shadow 0 5px color4_gold,
                  0 -2px color4_gold,
                  2px 0 color4_gold,
                  -2px 0 color4_gold,
                  2px 4px color4_gold,
                  -2px 4px color4_gold,
                  0 3px 20px color4_gold,
                  0 6px 70px color2 _gold
  .btn
    background color4_gold + 30
    border 1px solid color4_gold
    color color1_gold + 30
    box-shadow inset 0 2px rgba(#fff,.3), 0 3px 10px color4_gold, inset 0 -2px 13px rgba(green - 22,.3) !important
    &:hover
      background color5_gold
      color color1_gold
      border-color color5_gold - 60
      box-shadow 0 3px 0 color5_gold - 60, 0 6px 30px rgba(color5_gold, .6), inset 0 2px rgba(#fff,.6), inset 0 -2px 13px rgba(color4_gold,.3)
      text-shadow 0 1px 3px color2_gold - 130
      svg
        filter drop-shadow(0px 1px color2_gold - 100)
    &:active
      background color2_gold - 20
      color color2_gold - 100
      border-color color2_gold - 60
      box-shadow 0 0px 0 color3_gold - 60, 0 3px 10px color2_gold - 100, inset 0 2px rgba(#fff,.6), inset 0 -2px 13px rgba(color3_gold,.3)
      path
        fill color2_gold - 100
    path
      fill color1_gold
  .nav-menu
    background linear-gradient(to bottom, color4_gold - 30 50%, rgba(color5_gold,.5))
    +tablet()
      background transparent
  #curriculo
    legend
      border 0
    label,
    legend,
    .radio
      background rgba(color4_gold, .7)
      color color1_gold
      box-shadow 0 0 10px color2_gold - 30
  .mark
    background rgba(color4_gold, .6)
    color color1_gold
    padding 4em 2em
    margin 2em 0
    text-shadow 0 3px color4_gold
    box-shadow 0 0 60px 10px rgba(color5_gold, .6)
  .render
    color #333
    h1, h2
      color color5_gold
@media print
  .gold .render
    color rgba(color4_gold, .8) !important
    h1, h2
      color color5_gold  !important
