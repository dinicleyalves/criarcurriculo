color1_gold = #FCFCFC
color2_gold = #FFD166
color3_gold = #EF476F
color4_gold = #612318
color5_gold = #e3c814 - 50
color6_gold = #abc
color7_gold = red + 130

.gold
  logo(color1_gold, color2_gold, color3_gold, color4_gold)
  btn(color4_gold, color2_gold)
  background #000
  &:before
    background color4_gold url('./assets/gold.jpg') fixed
    background-size cover
  .nav-menu
    background linear-gradient(color4_gold, rgba(color4_gold, .6))
    +tablet()
      background transparent
  .mark
    background rgba(color4_gold, .9)
    box-shadow 0 0 60px 10px rgba(color5_gold, .6)
    color color1_gold
    text-shadow 0 3px color4_gold
  legend
    background rgba(color4_gold, .9)
    border 1px solid color4_gold - 50
  .paz
    fill #fff
  .credits
    color #fff
  .render
    h1, h2
      color color5_gold  !important
    h3, .date
      color color4_gold  !important
    svg
      fill color4_gold  !important
@media print
  .gold .render
    color rgba(color4_gold, .8) !important
    h1, h2
      color color5_gold  !important
    h3, .date
      color color4_gold  !important
    svg
      fill color4_gold  !important
