color1_classic = #FCFCFC
color2_classic = #FFD166
color3_classic = #EF476F
color4_classic = #584630
color5_classic = #584630 - 30
color6_classic = #abc
color7_classic = red + 130

.classic
  background color4_classic url('./assets/bg-paper.jpg') no-repeat fixed bottom center
  background-size cover
  .header
    &.active
      box-shadow 0 4px 20px rgba(#000, .4), 0 3px 0 color4_classic + 10, 0 6px 30px rgba(color4_classic,.3), inset 0 2px rgba(#fff,.3), inset 0 -2px 13px rgba(color4_classic,.3)
      background color4_classic
  .logo
    color color1 + 10
    text-shadow 0 5px color4_classic,
                0 -2px color4_classic,
                2px 0 color4_classic,
                -2px 0 color4_classic,
                2px 4px color4_classic,
                -2px 4px color4_classic,
                0 3px 20px color4_classic,
                0 6px 60px color5_classic
    &:hover
      color color2
      text-shadow 0 5px color4_classic,
                  0 -2px color4_classic,
                  2px 0 color4_classic,
                  -2px 0 color4_classic,
                  2px 4px color4_classic,
                  -2px 4px color4_classic,
                  0 3px 20px color4_classic,
                  0 6px 70px color2 _classic
  .btn
    background color4_classic + 30
    border 1px solid color4_classic
    box-shadow inset 0 2px rgba(#fff,.3), 0 3px 10px color4_classic, inset 0 -2px 13px rgba(green - 22,.3) !important
    color color1_classic + 30
    &:hover
      background color5_classic
      border-color color5_classic - 60
      box-shadow 0 3px 0 color5_classic - 60, 0 6px 30px rgba(color5_classic, .6), inset 0 2px rgba(#fff,.6), inset 0 -2px 13px rgba(color4_classic,.3)
      color color1_classic
      text-shadow 0 1px 3px color2_classic - 130
      svg
        filter drop-shadow(0px 1px color2_classic - 100)
    &:active
      background color2_classic - 20
      border-color color2_classic - 60
      box-shadow 0 0px 0 color3_classic - 60, 0 3px 10px color2_classic - 100, inset 0 2px rgba(#fff,.6), inset 0 -2px 13px rgba(color3_classic,.3)
      color color2_classic - 100
      path
        fill color2_classic - 100
    path
      fill color1_classic
  .nav
    +tablet()
      &.active.active_show .nav-menu
        box-shadow 0 0 200px 100px color2_classic
  .nav-menu
    background linear-gradient(to bottom, color4_classic - 30 50%, rgba(color5_classic,.5))
    +tablet()
      background transparent
  #curriculo
    legend
      border 0
    label,
    legend,
    .radio
      text-shadow 0 2px 10px rgba(#000, .5)
      background rgba(color4_classic + 30, .95)
      box-shadow 0 0 30px rgba(color5_classic - 30, .3)
      color color1_classic
      &.error
        input, select, textarea, label
          box-shadow 0 0 0 2px red, 0 0 0 3px #fff, 0 0 30px red
        [type="radio"]
          box-shadow none
      .error-msg
        color #fff
        text-shadow 0 2px 10px #000
        background linear-gradient(to right, red, rgba(red,0))
        padding 10px
        border-radius 6px
  .mark
    background rgba(color5_classic, .9)
    box-shadow 0 0 60px 10px rgba(color5_classic, .6)
    color color1_classic
    margin 2em 0
    padding 4em 2em
    text-shadow 0 3px color4_classic
  .render
    color color4_classic + 30
    h1, h2
      color color5_classic + 30
@media print
  .classic .render
    color color4_classic + 30 !important
    h1, h2
      color color5_classic + 30 !important
