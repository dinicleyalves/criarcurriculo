.footer
  text-align center
  font-weight normal
  padding 40px 0
  &.home
    padding 65vh 0 40px
    +tablet()
      padding 5em 3em
      width 35%
    +desktop()
      width 40%
.credits
  user-select none
  color #fff
  font-size 1em
  cursor pointer
  i
    transition 1s all
    width .8em
    display inline-block
  small, i
    font-style normal
    color #fff
    text-shadow 0 2px 2px rgba(#000,.6)
  &:hover
    letter-spacing 10px
    color #fff
    transition 2s all
    text-shadow 0 2px 2px rgba(#000,.6)
    i
      font-size 2em
      margin 4px
    small, i
      color #fff
