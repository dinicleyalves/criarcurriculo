.footer
  font-weight normal
  padding 20px 0 40px
  text-align center
  position relative
  z-index 9
  pointer-events none
  &.home
    +tablet()
      width 50%

.credits
  color #000
  cursor pointer
  font-size 1em
  transition 2s all
  user-select none
  pointer-events all
  i
    display inline-block
    transition 1s all
    width .8em
  small, i
    font-style normal
    text-shadow 0 2px 2px rgba(#fff,.6)
  &:hover
    letter-spacing 10px
    text-shadow 0 2px 2px rgba(#000,.6)
    transition 2s all
    i
      font-size 2em
      margin 4px
    svg
      filter drop-shadow(0 2px 10px rgba(#fff, .7))
  svg
    margin-top 20px
    transition 2s all
  &.curriculo
    clear both
    display block
    margin 0 auto
    margin-bottom 10px
    position relative
    transition .5s all
    pointer-events all
    will-change all
    &:hover
      transform scale(1.3)
      ~ .L
        .paz
          opacity 0
        .brasil
          opacity 1
    small
      width 100%
      display inline-block
      margin-top 10px
    svg
      filter drop-shadow(0 2px 2px rgba(#fff, .5))

.L
  text-align center
  display block
  width 100%
  height 50px
  box-sizing border-box
  &:after
    content ''
    display table
    clear both
  .paz,
  .brasil
    transition .3s all
    position absolute
    margin-left -20px
    margin-bottom 20px
    filter drop-shadow(0 2px 2px rgba(#fff, .5))
  .paz
    opacity 1
    fill #000
  .brasil
    opacity 0
  &:hover
    .paz
      opacity 0
    .brasil
      opacity 1
