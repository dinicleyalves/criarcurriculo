.footer
  font-weight normal
  padding 40px 0
  text-align center
  &.home
    padding 65vh 0 40px
    +tablet()
      padding 5em 3em
      width 35%
    +desktop()
      width 40%

.credits
  color #fff
  cursor pointer
  font-size 1em
  user-select none
  transition 2s all
  i
    display inline-block
    transition 1s all
    width .8em
  small, i
    color #fff
    font-style normal
    text-shadow 0 2px 2px rgba(#000,.6)
  &:hover
    color #fff
    letter-spacing 10px
    text-shadow 0 2px 2px rgba(#000,.6)
    transition 2s all
    i
      font-size 2em
      margin 4px
    small, i
      color #fff
    svg
      filter drop-shadow(0 2px 10px rgba(#fff, .7))
  svg
    margin-top 20px
    transition 2s all

.link_open
  clear both
  display block
  font-size 0
  line-height 0
  margin 0 auto
  margin-bottom 20px
  position relative
  transition .5s all
  width 60px
  &:after,
  &:before
    box-sizing border-box
    display block
    opacity 0
    pointer-events none
  &:after
    background #333
    border-radius 4px
    bottom 80px
    color #fff
    content 'Open Source Github'
    font-size 7px
    left calc(50% - 30px)
    line-height 9px
    padding 6px 6px 8px
    position absolute
    transform scale(0)
    transition .5s opacity, 2s color, .5s transform
    width 60px
  &:before
    border 5px solid transparent
    border-top 5px solid #333
    content ''
    height 1px
    left calc(50% - 5px)
    position relative
    top -11px
    transition .1s all
    width 1px
  &:hover
    transform scale(1.3)
    &:after, &:before
      color #fff
      opacity 1
      pointer-events all
      transform scale(1)
      transition 1s opacity
    &:before
      transition 1.3s all
  svg
    filter drop-shadow(0 2px 2px rgba(#fff, .5))
