.footer
  font-weight normal
  padding 40px 0
  text-align center
  position relative
  z-index 9
  pointer-events none
  &.home
    +tablet()
      width 50%

.credits
  color #000
  cursor pointer
  font-size 1em
  transition 2s all
  user-select none
  pointer-events all
  i
    display inline-block
    transition 1s all
    width .8em
  small, i
    font-style normal
    text-shadow 0 2px 2px rgba(#000,.6)
  &:hover
    letter-spacing 10px
    text-shadow 0 2px 2px rgba(#000,.6)
    transition 2s all
    i
      font-size 2em
      margin 4px
    svg
      filter drop-shadow(0 2px 10px rgba(#fff, .7))
  svg
    margin-top 20px
    transition 2s all

.link_open
  clear both
  display block
  font-size 0
  line-height 0
  margin 0 auto
  margin-bottom 20px
  position relative
  transition .5s all
  width 60px
  pointer-events all
  will-change all
  &:after,
  &:before
    box-sizing border-box
    display block
    opacity 0
    pointer-events none
  &:after
    background #333
    border-radius 4px
    bottom 80px
    color #fff
    content 'Open Source Github'
    font-size 7px
    left calc(50% - 30px)
    line-height 9px
    padding 6px 6px 8px
    position absolute
    transform scale(0)
    transition .5s opacity, 2s color, .5s transform
    width 60px
  &:before
    border 5px solid transparent
    border-top 5px solid #333
    content ''
    height 1px
    left calc(50% - 5px)
    position relative
    top -11px
    transition .1s all
    width 1px
  &:hover
    transform scale(1.3)
    &:after, &:before
      color #fff
      opacity 1
      pointer-events all
      transform scale(1)
      transition 1s opacity
    &:before
      transition 1.3s all
    & + .credits
      letter-spacing 10px
      transform translateY(10px)
  svg
    filter drop-shadow(0 2px 2px rgba(#fff, .5))

.L
  text-align center
  display block
  width 100%
  height 50px
  box-sizing border-box
  &:after
    content ''
    display table
    clear both
  .paz,
  .brasil
    transition .3s all
    position absolute
    margin-left -20px
    margin-bottom 20px
  .paz
    opacity 1
    fill #000
  .brasil
    opacity 0
  &:hover
    .paz
      opacity 0
    .brasil
      opacity 1
