#curriculo,
.curriculo-actions
  padding 1em 11px 0
  box-sizing border-box
  +tablet()
    width 50%
    max-width 50%
    float right
    clear both

.curriculo-actions
  +tablet()
    padding-top 0

.home .container
  +desktop()
    width 100%
    max-width 70%
    margin 0 auto
    position relative

.mark
  background rgba(color4 - 50, .9)
  box-sizing border-box
  color color1
  display block
  font-weight normal
  line-height 2em
  margin 1em 11px
  padding 5em 2em 2em
  position relative
  border-radius 20px
  +tablet()
    padding 2em
  +desktop()
    max-width 70%
    margin 1em auto
  &:after
    content ''
    display table
    clear both
  h1
    margin-bottom .5em
  h2
    font-size 1.5em
    line-height 1em
    color color2
    margin-bottom 0.5em
    +desktop()
      font-size 2em
    &:first-of-type
      font-size 2em
      +tablet()
        font-size 2.5em
      +desktop()
        font-size 3em
