#curriculo,
.curriculo-actions
  padding 1em 11px 0
  box-sizing border-box
  +tablet()
    width 50%
    max-width 50%
    float right
    clear both

.curriculo-actions
  +tablet()
    padding-top 0

.home .container
  +ultrawide()
    width 100%
    max-width 70%
    margin 0 auto
    position relative

.mark
  background rgba(color4, .9)
  box-sizing border-box
  color color1
  display block
  font-weight normal
  line-height 2em
  margin 0
  padding 2em 2em
  width 100%
  position relative
  h1
    margin-bottom .5em
  h2
    font-size 1.2em
