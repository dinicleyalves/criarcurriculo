#curriculo
  padding 3em
  .btn
    width 100%
    margin 1em 0 0
    &.right
      width auto
input,
textarea,
select
  padding 1em
  margin 0
  border 0
  background color1
  border-radius 6px
input[type='radio']
  margin-right 1em
label
  cursor pointer
  &.error
    background linear-gradient(145deg, color7, color1)
    input, select, textarea
      box-shadow 0 0 6px 1px red
label, legend, .box
  background rgba(color1, .6)
  color #333
  display block
  padding 1em
  transition .3s all
  &:hover
    background rgba(color1, .75)
  p
    margin-bottom 1em
.box label
  margin-bottom .5em
  border-radius 6px
  &:hover
    background linear-gradient(-145deg, rgba(color5,.5), color2)
    padding 1.5em
  &:last-of-type
    margin-bottom 0
fieldset
  display block
legend
  background rgba(color1, .9)
  width 100%
  font-size 1.2em
  box-sizing border-box
  border-bottom solid 1px #ccc
  margin-top 2em
.course,
.experience
  margin-top 2em

.mark
  background rgba(color4, .6)
  color color1
  padding 4em
  margin 4em 0 2em
  text-shadow 0 3px color4
  box-shadow 0 0 60px 10px rgba(color1, .3)
  font-weight normal
  h1
    margin-bottom 1em
