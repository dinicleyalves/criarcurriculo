#curriculo
  padding 1em 1em 0
  +tablet()
    width 35%
    padding 1.5em 3em 0
    float left
    min-height 100vh
  +desktop()
    width 40%
  .btn
    width 100%
    &.right
      width auto
  input,
  textarea,
  select
    width 100%
    padding 1em
    font-size 1em
    margin 0
    border 0
    background color1
    border-radius 6px
    box-sizing border-box
    color #333
  input[type='radio'],
  input[type='checkbox']
    margin-right 1em
    width auto
  label,
  .radio
    cursor pointer
    &.error
      background linear-gradient(145deg, color7, color1)
      input, select, textarea
        box-shadow 0 0 6px 1px red
  label,
  legend,
  .radio
    background rgba(color1, .6)
    color #333
    display block
    padding 1em
    transition .3s all
    &:hover
      background rgba(color1, .75)
    label
      margin-bottom .5em
      border-radius 6px
      &:hover
        background linear-gradient(-145deg, rgba(color5,.5), color2)
        padding 1.5em
      &:last-of-type
        margin-bottom 0
    p
      margin-bottom 1em
  .radio
    user-select none
  fieldset
    display block
    box-sizing border-box
  legend
    background rgba(color1, .9)
    width 100%
    font-size 1.2em
    box-sizing border-box
    border-bottom solid 1px #ccc
    position relative

.mark
  background rgba(color4, .6)
  color color1
  padding 4em 2em
  margin 2em 0
  text-shadow 0 3px color4
  box-shadow 0 0 60px 10px rgba(color5, .6)
  font-weight normal
  animation force 3s infinite alternate
  line-height 2em
  box-sizing border-box
  width 100%
  display block
  h1,  h2
    margin-bottom 1em
