header.animate_intro
  height 300px

.header
  height 300px
  color #666
  letter-spacing .8px
  user-select none
  -webkit-tap-highlight-color rgba(255, 255, 255, 0) !important
  -webkit-focus-ring-color rgba(255, 255, 255, 0) !important
  outline none
  will-change opacity, translate, scale
  z-index 9
  position relative
  &.active.fixedFooter
    transform translateY(-170px)
  &.active
    box-shadow 0 4px 20px rgba(#000, .4), 0 3px 0 color5 - 60, 0 6px 30px rgba(color1,.3), inset 0 2px rgba(#fff,.3), inset 0 -2px 13px rgba(color4,.3)
    width 100%
    height 65px
    background color4
    background radial-gradient(ellipse farthest-corner at 50% 0%, color5 0%, color4 50%)
    position fixed
    padding 0
    margin 0
    top 0
    left 0
    transition .3s transform
    animation force 5s infinite alternate
    .nav-menu.active
      opacity 1
      pointer-events all
    .btn.menu
      display block !important
    .logo
      margin 0 auto
      font-size 1.5em
      display block
      top 20px
    +tablet()
      .nav-menu
        width 100%
        position absolute
        top 65px
        left 0
        opacity 0
        pointer-events none
        .btn
          border-radius 0
