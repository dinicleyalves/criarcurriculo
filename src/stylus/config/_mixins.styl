// // Media query mixins
//
mobile()
  @media (min-width: 640px)
    {block}

tablet()
  @media (min-width: 800px)
    {block}

desktop()
  @media (min-width: 1440px)
    {block}

ultrawide()
  @media (min-width: 1840px)
    {block}

print()
  @media (print)
    {block}

logo(cor1, cor2, cor5, cor4)
  .logo
    color cor1 + 10
    text-shadow 0 5px cor4,
                0 -2px cor4,
                2px 0 cor4,
                -2px 0 cor4,
                2px 4px cor4,
                -2px 4px cor4,
                0 3px 20px cor4,
                0 6px 60px cor2
    &:hover
      color cor2
      text-shadow 0 5px cor4,
                  0 -2px cor4,
                  2px 0 cor4,
                  -2px 0 cor4,
                  2px 4px cor4,
                  -2px 4px cor4,
                  0 3px 20px cor4,
                  0 6px 70px cor2
btn(cor1, cor2)
  .btn
    background cor1 + 110
    border 1px solid cor1
    color cor1 - 50
    &:hover
      background cor1 + 90
    &.router-link-exact-active
      background cor2 - 20
      border-color cor2 - 60
      color cor1
      svg, path
        fill cor1
    &.delete
      background red + 170
      border-color red - 120
      color red - 120
      &:hover
        background red + 190
      svg, path
        fill red - 120
    &.plus
      background green + 100
      border-color green - 30
      color green - 50
      &:hover
        background green + 130
    svg, path
      fill cor1 - 15
