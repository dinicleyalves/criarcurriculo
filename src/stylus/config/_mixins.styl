// // Media query mixins
//
mobile()
  @media (min-width: 640px)
    {block}

tablet()
  @media (min-width: 800px)
    {block}

desktop()
  @media (min-width: 1440px)
    {block}

ultrawide()
  @media (min-width: 1840px)
    {block}

print()
  @media (print)
    {block}

logo(cor1, cor2, cor5, cor4)
  .logo
    color cor1 + 10
    text-shadow 0 5px cor4,
                0 -2px cor4,
                2px 0 cor4,
                -2px 0 cor4,
                2px 4px cor4,
                -2px 4px cor4,
                0 3px 20px cor4,
                0 6px 60px cor2
    &:hover
      color cor2
      text-shadow 0 5px cor4,
                  0 -2px cor4,
                  2px 0 cor4,
                  -2px 0 cor4,
                  2px 4px cor4,
                  -2px 4px cor4,
                  0 3px 20px cor4,
                  0 6px 70px cor2
btn(cor1, cor2)
  .btn
    background cor1 + 30
    border 1px solid cor1
    border-color cor1 - 30
    &:hover
      background cor1 + 60
    &.router-link-exact-active
      background cor2 - 20
      border-color cor2 - 60
      color cor1
      svg, path, circle
        fill cor1
    &.delete
      background red - 30
      border-color red - 60
      &:hover
        background red + 60
    &.plus
      background green + 30
      border-color green - 30
      &:hover
        background green + 60
