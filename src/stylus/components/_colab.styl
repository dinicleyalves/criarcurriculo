.colab
  margin-top 2em
  .flexbox
    justify-content center
  .people
    cursor pointer
    transition .3s all
    &:hover
      transform scale(1.1)
      img
        animation power 1s infinite alternate
        border-radius 50%
        box-shadow 0 0 0 2px #fff, 0 0 20px 10px color2
        transform rotate(45deg)
    figure
      width 200px
    img
      border-radius 10px
      transition .7s all
      width 100%
