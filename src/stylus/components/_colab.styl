.colab
  margin-top 2em
  .flexbox
    justify-content center
  .people
    cursor pointer
    transition .3s all
    &:hover
      transform scale(1.1)
      img
        animation power 1s infinite alternate
        border-radius 50%
        box-shadow 0 0 0 2px #fff, 0 0 20px 10px color2
        transform rotate(45deg)
        cursor crosshair
    figure
      width 200px
    img
      border-radius 10px
      box-shadow 0 0 0 3px rgba(#fff, .3), 0 0 20px 10px rgba(#000, .1)
      transition .7s all
      width 100%

.hitech
  &:hover
    color color2
    background radial-gradient(ellipse 50% 50%, rgba(color2, .5), rgba(#000, 0) 80%)
    .credits_logo
      opacity .5
      filter grayscale(100%) drop-shadow(0 2px 10px color2)
      transform scale(.9)
      z-index 1
      &:hover
        opacity 1
        filter grayscale(0) drop-shadow(0 2px 10px #fff)
        transform scale(1.4)
        z-index 9
.credits_logo
  display inline-block
  margin-right 20px
  transition .5s all
  filter drop-shadow(0 2px 10px #fff)
  color #fff
  text-shadow 0 2px 2px rgba(#000, .5)
  &:hover
    transform scale(1.4)
    filter grayscale(0) drop-shadow(0 2px 10px #fff)
    z-index 9
    position relative
    will-change all
    transition .3s all
  &:last-of-type
    margin 0
