.render
  height 60vh
  position relative
  .view
    -webkit-tap-highlight-color transparent
    background #fff
    bottom 0
    bottom 249px
    box-shadow 0 -10px 40px rgba(#000,.3)
    box-sizing border-box
    clear both
    color #000
    cursor pointer
    height 50vh
    left calc(50% - 40%)
    margin 0 auto
    outline none
    overflow auto
    padding 3em
    position fixed
    transition .3s all
    width 80%
    z-index 1
    &.viewless
      cursor pointer
      filter blur(3px)
      transform rotate(-35deg) translate(20%, 130%)
    &.viewblocked
      pointer-events none
      opacity .7
    label
      cursor pointer
    h1, p
      margin-bottom 1em
    h2
      margin 1em 0 .5em
  +tablet()
    box-sizing border-box
    float right
    padding 1em 1em 0
    position relative
    width 50%
    &.viewfixed
      position fixed
      right 0
      top 0
    .view
      height calc(100vh - 60px)
      left 0
      position absolute
      top 30px
      width calc(100% - 1em)
      &.viewless
        cursor default
        filter none
        transform none
