.render
  position relative
  label
    &[for^='GET-telephone'],
    &[for^='GET-email'],
    &[for^='GET-site']
      margin-right 1em
      display inline-flex
  +tablet()
    box-sizing border-box
    float right
    padding 1em 1em 0
    position absolute
    left 1em
    width 50%
    &.viewfixed
      position fixed
      left 1em
      top 0

.view
  &.abel,
  &.abel pre
    font-family 'Abel', sans-serif
  &.play,
  &.play pre
    font-family 'Play', sans-serif
  &.kaushan,
  &.kaushan pre
    font-family 'Macondo Swash Caps', sans-serif
  &.rajdhani,
  &.rajdhani pre
    font-family 'Rajdhani', sans-serif
  label
    background transparent
    border 0
    cursor pointer
    padding 0
    position relative
  .btn
    bottom 6px
    position absolute
    right 6px
    &.photo.delete
      margin 0
      left 6px
      right auto
  .figure
    align-items center
    background #fff
    border 1px solid #999
    border-radius 6px
    display flex
    height 130px
    justify-content center
    overflow hidden
    width 100px
    transition 1s all
    position absolute
    img
      border-radius 6px
      height 130px
      transition 1s all
  h1, p
    margin-bottom .5em
  h1
    font-size 1.5em
    +tablet()
      font-size 2em
  h2
    font-size 1.2em
    margin 1em 0 .5em
    +tablet()
      font-size 1.5em
  h3
    font-size 1.2em
    margin 1em 0 .5em
  hr
    clear both
  .coursers,
  .experiencies
    .date
      font-weight bold
      margin-top 5px
  .info
    margin-bottom 20px
    width 100%
    border-bottom 1px solid #c4c4c4
    transition .3s all
    &:after
      content ''
      display table
      clear both
    &.photo
      padding-left 120px
      min-height 157px
    p
      line-height 20px
  .contact-info
    float left
  .hobby
    ul
      list-style none
    li
      background #fff
      border 1px solid #000
      color #000
      padding 5px 8px
      margin-right 5px
      margin-bottom 5px
      display inline-block
      border-radius 50px
      &:last-of-type
        margin-right 0
  .icon-travel
    margin 0 5px
  .icon-check
    margin 0 5px
    transform translateY(2px)
  .icon-location,
  .icon-date,
  .icon-user
    margin-right 5px
  .icon-email
    transform scale(1.3)
  .icon-phone,
  .icon-email,
  .icon-site
    margin-right 10px
  .icon-course,
  .icon-experience
    margin-right 10px
    transform translateY(2px)

  .content
    background #fff
    bottom 0
    box-shadow 0 -10px 40px rgba(#000,.3)
    box-sizing border-box
    border-radius 30px
    clear both
    cursor pointer
    font-size 15px
    font-weight normal
    height 50vh
    margin 0 auto
    outline none
    overflow auto
    padding 3em
    transition .3s all
    width calc(100% - 20px)
    word-wrap break-word
    z-index 1
    +tablet()
      height calc(100vh - 30px)
      left 0
      position absolute
      top 15px
      width calc(100% - 1em)

+htmlDir()
  .render
    label
      &[for^='GET-telephone'],
      &[for^='GET-email'],
      &[for^='GET-site']
        margin-right 0
        margin-left 1em
    +tablet()
      right auto
      left 1em
      float left
      &.viewfixed
        right auto
        left 1em

  .view
    .info.photo
      padding-left 0
      padding-right 120px
    .contact-info
      float right
    .exps,
    .hobby,
    .cademy,
    label[for="GET-about"]
      clear both
    .hobby li
      margin-right 0
      margin-left 5px
      &:last-of-type
        margin-left 0
    .icon-location,
    .icon-date,
    .icon-user
      margin-right 0
      margin-left 5px
    .icon-phone,
    .icon-email,
    .icon-site
      margin-right 0
      margin-left 10px
    .icon-course,
    .icon-experience
      margin-right 0
      margin-left 10px
