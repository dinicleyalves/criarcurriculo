.btn
  border 1px solid color4
  background color4 + 30
  border-radius 6px
  color color1
  outline none
  line-height 23px
  font-size 20px
  font-weight 100
  transition .3s all
  cursor pointer
  position relative
  padding 20px
  text-decoration none
  user-select none
  display block
  box-sizing border-box
  box-shadow inset 0 2px rgba(#fff,.3), 0 3px 10px color4, inset 0 -2px 13px rgba(green - 22,.3)
  animation force 5s infinite alternate
  &.router-link-exact-active
    background color2 - 20
    color color1
    border-color color2 - 60
    box-shadow 0 3px 0 color2 - 60, 0 6px 10px color4, inset 0 2px rgba(#fff,.6), inset 0 -2px 13px rgba(color3,.3)
    text-shadow 0 1px 3px color4
    transform translateY(-3px)
  &:hover
    background color5
    color color1
    border-color color5 - 60
    box-shadow 0 3px 0 color5 - 60, 0 6px 30px rgba(color5, .6), inset 0 2px rgba(#fff,.6), inset 0 -2px 13px rgba(color4,.3)
    text-shadow 0 1px color2 - 130
    transform translateY(-3px)
    svg
      filter drop-shadow(0px 1px color2 - 100)
  &:active
    background color2 - 20
    color color2 - 100
    border-color color2 - 60
    box-shadow 0 0px 0 color3 - 60, 0 3px 10px color2 - 100, inset 0 2px rgba(#fff,.6), inset 0 -2px 13px rgba(color3,.3)
    transform translateY(0)
    path
      fill color2 - 100
  svg
    width 25px
    height 20px
    position absolute
    left 20px
  path
    fill color1
    transition .3s all
  &.bullet
    width 30px !important
    height 30px !important
    padding 0 !important
    position absolute
    top 13px
    right 12px
    &:last-of-type
      right 33px
  &.plus,
  &.delete
    &:active
      color green - 55
    span
      font-size 2em
      position absolute
      left 20px
  &.plus
    background green + 55
    text-shadow 0 2px 3px color4
    border-color green - 22
    box-shadow 0 0px 0 color3 - 60, 0 3px 10px color4, inset 0 2px rgba(#fff,.6), inset 0 -2px 13px rgba(green - 22,.3)
  &.delete
    background red + 55
    text-shadow 0 2px 3px red - 66
    border-color red - 66
    color color1
    box-shadow 0 0px 0 color3 - 60, 0 3px 10px color4, inset 0 2px rgba(#fff,.6), inset 0 -2px 13px rgba(red - 22,.3)
    & + .plus
      margin-right 1em !important
.menu
  width 45px
  height 45px
  padding 10px 0
  position fixed
  top 10px
  left 10px
  z-index 999
  &:hover span
    transform scale(.6)
    background color1
  span
    background color1
    border-radius 4px
    height 2px
    width 70%
    display block
    margin 0 auto 6px
    transition .3s transform
    &:last-of-type
      margin 0 auto
  +tablet()
    display none
