.btn
  border 1px solid color4
  background color4 + 30
  border-radius 6px
  color color1
  outline none
  line-height 23px
  font-size 20px
  font-weight 100
  transition .3s all
  cursor pointer
  position relative
  padding 20px
  text-decoration none
  user-select none
  display block
  box-sizing border-box
  box-shadow inset 0 2px rgba(#fff,.3)
  &.router-link-exact-active
    background color2 - 20
    color color4
    border-color color2 - 60
    box-shadow 0 3px 0 color2 - 60, 0 6px 10px color4, inset 0 2px rgba(#fff,.6), inset 0 -2px 13px rgba(color3,.3)
    text-shadow 0 1px #fff
    transform translateY(-3px)
  &:hover
    background color5
    color color1
    border-color color5 - 60
    box-shadow 0 3px 0 color5 - 60, 0 6px 30px rgba(color1,.3), inset 0 2px rgba(#fff,.6), inset 0 -2px 13px rgba(color4,.3)
    text-shadow 0 1px color5 - 90
    transform translateY(-3px)
    svg
      filter drop-shadow(0px 1px color4)
  &:active
    box-shadow 0 3px 0 color5 - 60, 0 3px 10px color4, inset 0 2px rgba(#fff,.6), inset 0 -2px 13px rgba(color4,.3)
    transform translateY(0)
  svg
    margin-right 1em
    width 25px
    height 20px
  path
    fill color1
    transition .3s all
.menu
  width 45px
  padding 10px 0
  position fixed
  top 10px
  left 10px
  z-index 999
  background rgba(color4,.5)
  &:hover span
    transform scale(.6)
    background color1
  span
    background color1
    border-radius 4px
    height 2px
    width 70%
    display block
    margin 0 auto 6px
    transition .3s transform
    &:last-of-type
      margin 0 auto
  +tablet()
    display none
