.logo
  max-width 300px
  text-align center
  color color1 + 10
  text-shadow 0 5px color4,
              0 -2px color4,
              2px 0 color4,
              -2px 0 color4,
              2px 4px color4,
              -2px 4px color4,
              0 3px 20px color4,
              0 6px 60px color5
  font-size 3em
  display block
  cursor pointer
  transition .3s all
  margin 1.5em auto
  &:hover
    transform scale(1.2)
    color color2
    text-shadow 0 5px color4,
                0 -2px color4,
                2px 0 color4,
                -2px 0 color4,
                2px 4px color4,
                -2px 4px color4,
                0 3px 20px color4,
                0 6px 70px color2
  &:active
    transform scale(1.1)
  +tablet()
    margin 2em auto
