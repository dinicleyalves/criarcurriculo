.logo
  animation force 3s infinite alternate
  color color1 + 10
  cursor pointer
  display block
  font-size 3em
  margin 0 auto
  max-width 300px
  position relative
  text-align center
  text-shadow 0 5px color4,
              0 -2px color4,
              2px 0 color4,
              -2px 0 color4,
              2px 4px color4,
              -2px 4px color4,
              0 3px 20px color4,
              0 6px 60px color5
  top 2em
  transition .3s transform, .3s color
  will-change transform color
  &:hover
    transform scale(1.2)
    color color2
    text-shadow 0 5px color4,
                0 -2px color4,
                2px 0 color4,
                -2px 0 color4,
                2px 4px color4,
                -2px 4px color4,
                0 3px 20px color4,
                0 6px 70px color2
  &:active
    transform scale(1.1)
  +tablet()
    margin 0 auto
    top 2em

.credits_logo
  display inline-block
  margin-right 20px
  transition .3s all
  &:hover
    transform scale(1.1)
    &:after
      color #fff
      opacity 1
      pointer-events all
      transform scale(1)
      transition 1s opacity
  &:last-of-type
    margin 0
  &:after
    box-sizing border-box
    display block
    opacity 0
    pointer-events none
  &:after
    background #333
    border-radius 4px
    bottom -30px
    color #fff
    content attr(title)
    font-size 12px
    width 80px
    left calc(50% - 40px)
    line-height 9px
    padding 8px
    position absolute
    transform scale(0)
    transition .3s opacity, 1s color, .3s transform
    text-shadow 0 2px 2px #000
