@keyframes entry
  0%
    opacity 0
    filter blur(50px)
  100%
    opacity 1
    filter blur(0)

@keyframes app_entry
  0%
    opacity 0
    transform scale(0)
    filter blur(50px)
  100%
    transform scale(1)
    opacity 1
    filter blur(0)

@keyframes app_hide
  0%
    opacity 1
    transform scale(1.1)
    filter blur(0)
  10%
    opacity .8
    transform scale(.8)
    filter blur(10px)
  20%
    opacity .6
    transform scale(1.1)
    filter blur(20px)
  100%
    transform scale(0)
    opacity 0
    filter blur(50px)

@keyframes scroll_top
  0%
    transform translateY(0)
  100%
    transform translateY(-15px)

@keyframes power
  0%
    box-shadow 0 0 0 2px #fff, 0 0 20px 10px color2
  50%
    box-shadow 0 0 0 2px #fff, 0 0 60px 10px color2
  100%
    box-shadow 0 0 0 2px #fff, 0 0 10px 2px color2

.hide
  animation 2s app_hide !important
  transform scale(0) !important
  opacity 0 !important

.animate_intro
  animation .5s .2s entry backwards
  opacity 1

.animate_app_intro
  transform scale(1)
  animation .6s app_entry
  opacity 1

.fade-enter-active, .fade-leave-active
  transition transform 1s, opacity 2s
.fade-enter, .fade-leave-to
  opacity 0
  transform scale(0)
  transition opacity 0s
