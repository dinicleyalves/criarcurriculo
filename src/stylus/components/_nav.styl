.nav
  position relative
.nav-menu
  background linear-gradient(color4, rgba(color4, .6))
  bottom 0
  filter blur(100px)
  left 0
  padding 20px 10px
  position fixed
  right 0
  top 0
  transform translate(-100vw)
  transition all .35s
  z-index 99
  &.active
    filter blur(0px)
    transform translate(0)
  .title
    color color1
    font-size 1.5em
    +tablet()
      display none
  .title,
  .btn
    margin-bottom 1em
    text-align center
  .btn:last-of-type
    margin-bottom 0
  +tablet()
    background transparent
    filter blur(0px)
    margin 0  auto
    position relative
    transform translate(0)
    width 70%
    .btn
      border-radius 0
      float left
      margin 0
      width 33%
      &:first-of-type
        border-radius 6px 0 0 6px
      &:last-of-type
        border-radius 0 6px 6px 0
  +desktop()
    width 40%
