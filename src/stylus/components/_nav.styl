.nav-menu
  background #fff
  text-align center
  display block
  clear both
  position relative
  width 100%
  height 100%
  margin 0 auto
  user-select none
  transition .5s all
  transform translateX(-999px)
  position fixed
  top 0
  left 0
  z-index 99
  &.active
    transform translateX(0)
  .title
    font-size 1.5em
    margin 0
    position absolute
    top 18px
    left calc(50% - 1.5em)
  +tablet()
    width 80%
    background rgba(#222, 0)
    box-shadow none
    position relative
    transform translateX(0)
    padding-top 0
    display flex
    .title
      display none
    &:after
      content ''
      display table
      clear both
  +ultrawide()
    width 60%
